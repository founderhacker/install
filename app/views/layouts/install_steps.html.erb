<% content_for(:header) do %>
  <header>
    <div class="container">
      <%= link_to (content_tag(:p, nil, class: "icon-beaker") + " F/H Installer"), root_path, class: "site-title" %>
    </div>
  </header>
<% end %>

<% content_for(:content) do %>
  <% if content_for?(:sidebar) %>
    <div class="row">
      <div class="col-lg-8">
        <%= yield %>
      </div>
      <div class="col-lg-4">
        <div class="sidebar well" data-spy="affix" data-offset-top="80" data-offset-bottom="400">
          <%= yield(:sidebar) %>
        </div>
      </div>
    </div>

  <% else %>
      <%= yield %>
  <% end %>
<% end %>

<% content_for(:footer) do %>
  <%= link_to image_tag("founder-hacker-logo.png"), "https://www.founderhacker.com/?utm_source=installer", id: "footer-logo-link" %>  &copy; <%= Date.current.year %>
<% end %>

<%= render template: "layouts/application" %>
